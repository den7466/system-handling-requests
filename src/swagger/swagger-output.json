{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Handling requests system REST API",
    "description": "Handling requests system"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": ""
    }
  ],
  "paths": {
    "/": {
      "get": {
        "description": "Получить список обращений с возможность фильтрации по конкретной дате и по диапазону дат",
        "parameters": [
          {
            "name": "date",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "startDate",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "endDate",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "description": "Создать обращение",
        "responses": {
          "201": {
            "description": "Created"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "example": "any"
                  },
                  "text": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/work/{id}": {
      "get": {
        "description": "Взять обращение в работу",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/completed/{id}": {
      "patch": {
        "description": "Завершить обработку обращения",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "resolution": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/canceled/": {
      "patch": {
        "description": "endpoint который отменяет все обращения, которые находятся в статусе в работе",
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "reasonCancellation": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/canceled/{id}": {
      "patch": {
        "description": "Отменить обращение",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "reasonCancellation": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}